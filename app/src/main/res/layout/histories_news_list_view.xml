<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="historyListViewModel"
            type="wu.victor.snr.business.viewmodels.NewsHistoryListViewModel" />
        <import type="com.kelin.mvvmlight.bindingadapter.recyclerview.LayoutManagers" />
    </data>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#125634">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:text="历史"
                tools:text="新闻"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#458967"
            bind:viewModels="@{historyListViewModel.newsList}"
            bind:itemView="@{historyListViewModel.itemRes}"
            bind:itemViewModelId="@{historyListViewModel.itemViewModelId}"
            bind:layoutManager="@{LayoutManagers.linear()}">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</layout>
